<%- include("partials/_header") %>

<div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>nÂ°</td>
              <td>Mensaje a Encriptar</td>
              <td>Llave</td>
              <td>Mensaje Encriptado</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %> 
              <% for(var i = 0; i < data.length; i++) {%>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].msj %></td>
                  <td><%= data[i].llave %></td>
                  <td><%= data[i].msj_encriptado %></td>
                  <td class="d-flex gap-2"> 
                    <a href="/update/<%= data[i].id %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
              <% } %> 
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <form action="/add" method="POST">
            <input
              type="text"
              id="msj"
              name="msj"
              placeholder="Mensaje a encriptar"
              class="form-control mb-2"
              autofocus
            />
            <input
              type="number"
              id="llave"
              name="llave"
              placeholder="Llave o Dezplazamiento"
              class="form-control mb-2"
            />
            <button type="submit" class="btn btn-info">Guardar y encriptar Datos</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include("partials/_footer") %>